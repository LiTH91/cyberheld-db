{
  "name": "cyberheld-db",
  "version": "1.0.0",
  "description": "Desktop-App zur Beweissicherung von Facebook-Kommentaren",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http-get://localhost:3000 && set NODE_ENV=development && electron electron/main.js",
    "build": "next build && npm run build:electron",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:electron": "tsc -p electron/tsconfig.json",
    "start": "npm run build && electron .",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "electron",
    "nextjs",
    "facebook",
    "evidence",
    "screenshots"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "cross-env": "^10.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.0",
    "better-sqlite3": "^9.0.0",
    "fs-extra": "^11.0.0",
    "keytar": "^7.9.0",
    "next": "^14.0.0",
    "openai": "^5.19.1",
    "puppeteer-core": "^21.11.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.3.0",
    "winston": "^3.17.0"
  },
  "build": {
    "appId": "com.cyberheld.db",
    "productName": "Cyberheld DB",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*"
    ]
  }
}
